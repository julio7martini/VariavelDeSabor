@using AplicacaoWebCantina.Models.Clientes
@model ClientesModel

<script src="~/js/site.js"></script>

<div class="container mt-4">

    <h1 class="text-center mb-4 fs-0">Clientes</h1>

    <div class="mb-3">
        <a id="addButton" class="btn btn-primary btn-lg me-2" asp-controller="Clientes"
        asp-action="Record">Adicionar</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered shadow-sm">
            <thead class="table-primary">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nome</th>
                    <th scope="col" class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cliente in Model.Clientes)
                {
                    <tr>
                        <td>@cliente.Id</td>
                        <td>@cliente.Nome</td>
                        <td class="text-center">
                            <a class="btn btn-warning btn-sm me-2"
                               asp-controller="Clientes"
                               asp-action="Record"
                               asp-route-id="@cliente.Id">Editar</a>
                            <a class="btn btn-danger btn-sm"
                               asp-controller="Clientes"
                               asp-action="Excluir"
                               asp-route-id="@cliente.Id"
                               onclick="return confirm('Tem certeza que deseja excluir este produto?');"
                               >Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
