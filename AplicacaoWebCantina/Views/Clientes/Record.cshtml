@using AplicacaoWebCantina.Models.Clientes
@model ClienteModel

<div class="container mt-5">
    <h2 class="text-center mb-4">Editar Cliente</h2>
    <form asp-controller="Clientes" asp-action="Save" method="post" class="p-4 border rounded shadow-sm bg-light">
        <input type="hidden" asp-for="Id">

        <div class="mb-3">
            <label for="nome" class="form-label">Nome</label>
            <input type="text" class="form-control" id="nome" asp-for="Nome" placeholder="Digite o nome do cliente" required>
        </div>

        <div class="d-flex justify-content-end">
            <a class="btn btn-secondary me-2" asp-controller="Clientes" asp-action="Index">Voltar</a>
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </form>
</div>
