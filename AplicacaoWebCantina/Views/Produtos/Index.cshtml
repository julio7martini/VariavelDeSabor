@using AplicacaoWebCantina.Models.Produtos
@model ProdutosModel

<div class="container mt-4">

    <h1 class="text-center mb-4 fs-0">Produtos</h1>

    <div class="mb-3">
        <a class="btn btn-primary btn-lg me-2" asp-controller="Produtos"
           asp-action="Record">Adicionar</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered shadow-sm">
            <thead class="table-primary">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Preco</th>
                    <th scope="col" class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var produto in Model.Produtos)
                {
                    <tr>
                        <td>@produto.ID</td>
                        <td>@produto.Nome</td>
                        <td>@produto.Preco</td>
                        <td class="text-center">
                            <a class="btn btn-warning btn-sm me-2"
                           asp-controller="Produtos"
                           asp-action="Record"
                           asp-route-id="@produto.ID">Editar</a>
                            <a class="btn btn-danger btn-sm"
                           asp-controller="Produtos"
                           asp-action="Excluir"
                           asp-route-id="@produto.ID"
                               onclick="return confirm('Tem certeza que deseja excluir este produto?');">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
