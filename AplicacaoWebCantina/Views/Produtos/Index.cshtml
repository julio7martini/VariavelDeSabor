@using AplicacaoCantina.Models.Produto
@using AplicacaoWebCantina.Models.Produto
@model ProdutosModel

<div class="text-center">
    <table class="table table-striped">
        <h3 class="float-start">Produtos - Variável do Sabor</h3>
        <a type="button" class="btn btn-primary float-end" asp-controller="Produtos" asp-action="Adicionar">Novo Produto</a>
        <thead>
            <tr>
                <th>Código</th>
                <th>Nome</th>
                <th>Preço (R$)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.Produtos != null && Model.Produtos.Any())
            {
                @foreach (var produto in Model.Produtos)
                {
                    <tr>
                        <td>@produto.ID</td>
                        <td>@produto.Nome</td>
                        <td>@produto.Preco.ToString("F2")</td>
                        <td>
                            <a type="button" class="btn btn-warning me-1" asp-controller="Produtos" asp-action="Editar" asp-route-id="@produto.ID">
                                Editar
                            </a>
                            <a type="button" class="btn btn-danger" asp-controller="Produtos" asp-action="Excluir" asp-route-id="@produto.ID" onclick="return confirm('Tem certeza que deseja excluir este produto?');">
                                Excluir
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">Nenhum produto cadastrado.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
