@using AplicacaoWebCantina.Models.Produto
@model ProdutoModel

<div class="container mt-4">
    <h1 class="text-center mb-4">Adicionar Produto</h1>

    <div class="card shadow">
        <div class="card-body">
            <form asp-controller="Produtos" asp-action="Adicionar" method="post">
                <div class="mb-3">
                    <label for="Nome" class="form-label">Nome do Produto</label>
                    <input type="text" class="form-control" id="Nome" name="Nome" value="@Model?.Nome" required>
                </div>

                <div class="mb-3">
                    <label for="Preco" class="form-label">Preço (R$)</label>
                    <input type="number" class="form-control" id="Preco" name="Preco" step="0.01" value="@Model?.Preco" required>
                </div>

                <button type="submit" class="btn btn-success w-100">
                    <i class="fas fa-plus"></i> Adicionar Produto
                </button>
            </form>
        </div>
    </div>
</div>
