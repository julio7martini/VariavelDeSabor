@using AplicacaoWebCantina.Models.Produtos
@model ProdutoModel

<div class="container mt-4">
    <h1 class="text-center mb-4">Adicionar Produto</h1>

    <div class="card shadow">
        <div class="card-body">
            <div class="mb-3">
                <a class="btn btn-primary btn-lg me-2" asp-controller="Clientes"
                   asp-action="Record">Adicionar</a>
            </div>

                <div class="mb-3">
                    <label for="Preco" class="form-label">Preço (R$)</label>
                    <input type="number" class="form-control" id="Preco" name="Preco" step="0.01" value="@Model?.Preco" required>
                </div>

                <button type="submit" class="btn btn-success w-100">
                    <i class="fas fa-plus"></i> Adicionar Produto
                </button>
        </div>
    </div>
</div>
