@model IEnumerable<Estoque>

<h2>Estoque</h2>
<table class="table">
    <thead>
        <tr>
            <th>Produto</th>
            <th>Quantidade Atual</th>
            <th>Quantidade Mínima</th>
            <th>Data Última Reposição</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Produto.Nome</td>
                <td>@item.QuantidadeAtual</td>
                <td>@item.QuantidadeMinima</td>
                <td>@item.DataUltimaReposicao</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.Id })">Editar</a> |
                    <a href="@Url.Action("Details", new { id = item.Id })">Detalhes</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Create")">Adicionar Novo Produto ao Estoque</a>
