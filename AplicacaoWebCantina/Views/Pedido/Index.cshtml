@model List<AplicacaoCantina.Utils.Entidades.Pedido>

@{
    ViewData["Title"] = "Pedidos";
}

<h2>Pedidos</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Data do Pedido</th>
            <th>Valor Total</th>
            <th>Cliente ID</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pedido in Model)
        {
            <tr>
                <td>@pedido.ID</td>
                <td>@pedido.DataPedido</td>
                <td>@pedido.ValorTotal</td>
                <td>@pedido.ClienteID</td>
                <td>
                    <a href="@Url.Action("Edit", "Pedido", new { id = pedido.ID })">Editar</a> |
                    <a href="@Url.Action("Delete", "Pedido", new { id = pedido.ID })">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Pedido")">Criar Novo Pedido</a>
