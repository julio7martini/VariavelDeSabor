@model AplicacaoCantina.Utils.Entidades.Pedido

@{
    ViewData["Title"] = "Editar Pedido";
}

<h2>Editar Pedido</h2>

<form method="post">
    <input type="hidden" name="ID" value="@Model.ID" />
    <div class="form-group">
        <label for="ClienteID">Cliente ID</label>
        <input type="number" name="ClienteID" class="form-control" value="@Model.ClienteID" />
    </div>
    <div class="form-group">
        <label for="DataPedido">Data do Pedido</label>
        <input type="datetime-local" name="DataPedido" class="form-control" value="@Model.DataPedido.ToString("yyyy-MM-ddTHH:mm")" />
    </div>
    <div class="form-group">
        <label for="ValorTotal">Valor Total</label>
        <input type="number" name="ValorTotal" class="form-control" value="@Model.ValorTotal" />
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>

