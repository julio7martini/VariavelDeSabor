@model AplicacaoCantina.Utils.Entidades.Pedido

@{
    ViewData["Title"] = "Criar Pedido";
}

<h2>Criar Pedido</h2>

<form method="post">
    <div class="form-group">
        <label for="ClienteID">Cliente ID</label>
        <input type="number" name="ClienteID" class="form-control" />
    </div>
    <div class="form-group">
        <label for="DataPedido">Data do Pedido</label>
        <input type="datetime-local" name="DataPedido" class="form-control" />
    </div>
    <div class="form-group">
        <label for="ValorTotal">Valor Total</label>
        <input type="number" name="ValorTotal" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Criar</button>
</form>
