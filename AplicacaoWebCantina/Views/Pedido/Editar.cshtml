@model AplicacaoWebCantina.Models.Pedido.Pedido

@{
    ViewData["Title"] = "Editar Pedido";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Editar" method="post">
    <div class="form-group">
        <label for="NomeProduto">Nome do Produto</label>
        <input type="text" class="form-control" id="NomeProduto" name="NomeProduto" value="@Model.NomeProduto" required />
    </div>
    <div class="form-group">
        <label for="Quantidade">Quantidade</label>
        <input type="number" class="form-control" id="Quantidade" name="Quantidade" value="@Model.Quantidade" required />
    </div>
    <div class="form-group">
        <label for="Preco">Preço</label>
        <input type="number" step="0.01" class="form-control" id="Preco" name="Preco" value="@Model.Preco" required />
    </div>
    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
</form>
